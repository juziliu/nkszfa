.game-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100px;

  margin: 15px 0;
  padding: 0 5px;

  background: white;
}

.game-info {
  font-size: 12px;
}

.game-detail {
  display: flex;
  flex-direction: row;
  flex-grow: 1;

  justify-content: space-between;
  margin: 0 15px;
}

.vs {
  font-size: 18px;
  font-weight: bold;
  color: #ccc;
}

.game-result {
  display: flex;
  align-items: center;
}

.goal-input {
  width: 30px;
  text-align: center;
  border: 1px #000 solid;
}

.team-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.team-name {
  font-size: 14px;
}

.team {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.team-img {
  width: 19px;
  height: 13px;
}

.btn {
  width: 50px;
}
